#!/bin/bash

echo "Clock configuring ..."

packages=\
"
    zip
    unzip
    g++
    mingw-w64
    libsdl2-dev
    libsdl2-ttf-dev
"
libs=\
"
    https://www.libsdl.org/release/SDL2-devel-2.0.10-mingw.tar.gz
    SDL2-2.0.10/x86_64-w64-mingw32
    x86_64-w64-mingw32

    https://www.libsdl.org/projects/SDL_ttf/release/SDL2_ttf-devel-2.0.15-mingw.tar.gz
    SDL2_ttf-2.0.15/x86_64-w64-mingw32
    x86_64-w64-mingw32
"
cd prerequisite/
if ! ./configure.sh "${packages}" "${libs}"
then
    echo "Clock configuration failed."
    exit -1
fi
cd ../

echo "Clock configured."
