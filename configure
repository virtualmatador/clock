#!/bin/bash

echo "Clock configuring ..."

PREREQUESTIES="make g++ libsdl2-dev libsdl2-ttf-dev"
for prerequest in $PREREQUESTIES
do
    if [ "$(dpkg -l | grep '^ii' | awk '{print $2}' | grep '^$prerequest\$')" == "" ]
    then
        sudo apt -y -qq install $prerequest
    else
        echo $prerequest is present.
    fi
done

echo "Clock configured."
